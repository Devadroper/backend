<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Carrito</title>
  </head>
  <body>
    <main>
      <h3>Carrito</h3>
      <section class="cart">

        {{#each cart.products}}
          <div class="prodCart">
            <p>{{_id.title}}</p>
            <p>{{_id.description}}</p>
            <p>{{_id.price}}</p>
            <p>Cantidad: {{quantity}}</p>
          </div>
        {{/each}}
      </section>

    </main>
  </body>
</html>